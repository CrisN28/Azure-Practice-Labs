{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "loadBalancerName": {
      "type": "string",
      "defaultValue": "internal-lb",
      "metadata": {
        "description": "Internal Load Balancer name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Resource location"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "Labs-Network02",
      "metadata": {
        "description": "Virtual network name"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "SubnetB",
      "metadata": {
        "description": "Subnet name for the internal LB"
      }
    },
    "frontendIPName": {
      "type": "string",
      "defaultValue": "internal-frontend-ip",
      "metadata": {
        "description": "Frontend internal IP name"
      }
    },
    "frontendIP": {
      "type": "string",
      "defaultValue": "10.1.2.10",
      "metadata": {
        "description": "Static private IP address for the internal LB"
      }
    },
    "backendPoolName": {
      "type": "string",
      "defaultValue": "Internal backendPool",
      "metadata": {
        "description": "Internal Backend pool name"
      }
    },
    "loadBalancingRuleName": {
      "type": "string",
      "defaultValue": "lbRule",
      "metadata": {
        "description": "Load balancing rule name"
      }
    },
    "probeName": {
      "type": "string",
      "defaultValue": "healthProbe",
      "metadata": {
        "description": "Health probe name"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/loadBalancers",
      "apiVersion": "2021-05-01",
      "name": "[parameters('loadBalancerName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[parameters('frontendIPName')]",
            "properties": {
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName'))]"
              },
              "privateIPAddress": "[parameters('frontendIP')]",
              "privateIPAllocationMethod": "Static"
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[parameters('backendPoolName')]"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "[parameters('loadBalancingRuleName')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('loadBalancerName')), '/frontendIPConfigurations/', parameters('frontendIPName'))]"
              },
              "backendAddressPool": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('loadBalancerName')), '/backendAddressPools/', parameters('backendPoolName'))]"
              },
              "protocol": "Tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false,
              "idleTimeoutInMinutes": 4,
              "probe": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', parameters('loadBalancerName')), '/probes/', parameters('probeName'))]"
              }
            }
          }
        ],
        "probes": [
          {
            "name": "[parameters('probeName')]",
            "properties": {
              "protocol": "Http",
              "port": 80,
              "requestPath": "/",
              "intervalInSeconds": 5,
              "numberOfProbes": 2
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "loadBalancerIP": {
      "type": "string",
      "value": "[parameters('frontendIP')]"
    }
  }
}
